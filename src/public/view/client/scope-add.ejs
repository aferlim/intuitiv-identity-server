<%- contentFor('body') %>

    <h2>New scope</h2>
    <p>Use it for provide client restrictions rules</p>
    <form action="add" method="POST">
        <div class="form-group">
            <label for="namescope">Name</label>
            <input type="text" name="name" class="form-control" id="namescope" placeholder="Enter scope name">
            <small class="form-text text-muted">New scope name.</small>
        </div>
        <div class="form-group">
                <label for="descriptionscope">Description</label>
                <input type="text" name="description" class="form-control" id="descriptionscope" placeholder="Enter scope name">
                <small class="form-text text-muted">Scope description.</small>
            </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <a role="button" class="btn btn-secondary" href="/client/scope">Cancel</a>
    </form>

    <% if(errors){ %>
        <hr>
        <% errors.forEach(function(err){ %>
            <div class="alert alert-danger">
                <%= err.param %>:
                    <%= err.msg %>
            </div>
            <% }) 
    }%>

<%- contentFor('head') %>