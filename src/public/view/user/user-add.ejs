<%- contentFor('body') %>

    <h2>New User</h2>
    <p>Create new api user.</p>
    <form action="add" method="POST">
        <div class="form-group">
            <label for="namescope">Username</label>
            <input type="text" name="username" class="form-control" id="namescope" placeholder="Login Username">
            <small class="form-text text-muted">Login Username.</small>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="text" name="password" class="form-control" id="password" placeholder="User Password">
            <small class="form-text text-muted">Passwords must be at least 6 chars long and contain one number.</small>
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" name="email" class="form-control" id="email" placeholder="User Email">
        </div>
        <div class="form-group">
            <label for="roles">Roles</label>
            <select multiple name="role" id="roles" class="form-control">
                <% roles.forEach(function(role, index) { %>
                    <option value="<%= role._id %>">
                        <%= role.name %>
                    </option>
                    <% }); %>
            </select>
            <small class="form-text text-muted">Many roles are permited.</small>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <a role="button" class="btn btn-secondary" href="/user">Cancel</a>
    </form>

    <% if(errors){ %>
        <hr>
        <% errors.forEach(function(err){ %>
            <div class="alert alert-danger">
                <%= err.param %>:
                    <%= err.msg %>
            </div>
            <% })
        }%>

                <%- contentFor('head') %>